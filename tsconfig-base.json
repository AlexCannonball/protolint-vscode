{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    /* Projects */
    "composite": true,

    /* Modules */
    "resolveJsonModule": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,

    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
